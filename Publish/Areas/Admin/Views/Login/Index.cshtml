
@model MicroOptik.WebUI.Models.Login
           
@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <title>Admin Giriş</title>
   
    <link href="@Url.Content("~/Areas/Admin/Content/Style/Login.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

</head>
<body>
  
  @using (Html.BeginForm())
  {
   
    <table width="500" border="0" align="center" cellpadding="0" cellspacing="0" class="tablo">
  <tr>
    <td  class="ust" colspan="2">Yönetici Panel Girişi</td>
  </tr>
  <tr>
    <td style="height:30px;" >

     @{if (Request.QueryString["action"] != null)
	    {
		 <div class="hata" >Aranılan sayfa bulunamadı.</div>
	    }  
     }

        @Html.ValidationSummary(true)

    </td>
  </tr>
  <tr>
    <td class="style1" style="padding-left:20px;"  >
      <label class="label" >E-Posta</label>
        @Html.TextBoxFor(model => model.EPosta,new { @class = "form" })
        @Html.ValidationMessageFor(model => model.EPosta)
      </td>
  </tr>
  <tr>
    <td  class="yazi" style="height:35px; padding-left:20px;"   >
    <label class="label" >Şifre</label>    
       @Html.PasswordFor(model => model.Sifre, new { @class = "form" })
       @Html.ValidationMessageFor(model => model.Sifre )
    </td>
  </tr>
  <tr>
    <td class="yazi" style="height:60px; padding-right:20px; text-align:right;"  >
        <label>
       
        <input type="submit" value="Oturum Aç" class="buttonGiris" />
    
        </label>
      </td>
  </tr>
    <tr>
    <td class="alt" style="text-align:right; padding-right:10px;" >
             
      </td>
  </tr>
  </table>
  }
</body>
</html>
