@model ModelLayer.SiteDil

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="content-box"><!-- Start Content Box -->
     <div class="content-box-header">
					<h3 style="cursor: s-resize;">Site Dilleri</h3>
	 <div class="clear"></div>
	 </div> <!-- End .content-box-header -->
	 <div style="display: block;" class="content-box-content">
	 <div style="display: block;" class="tab-content default-tab" id="tab1">

     <div class="linkZemin" >
         @Html.ActionLink("Site Dilleri", "Index","SiteDil", new{ @class= "button" })
     </div>


@using (Html.BeginForm("Create", "SiteDil", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(false)
        <div class="editor-label">
            @Html.LabelFor(model => model.Adi)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Adi, new { @class = "text", @style = "width:300px;" })
            @Html.ValidationMessageFor(model => model.Adi)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Kodu)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Kodu, new { @class = "text", @style = "width:300px;" })
            @Html.ValidationMessageFor(model => model.Kodu)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Icon)
        </div>
        <div class="editor-field">
            <input type="file" name="Icon" id="Icon" />
            @Html.HiddenFor(model => model.Icon)
            @Html.ValidationMessageFor(model => model.Icon)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Durum)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Durum)
            @Html.ValidationMessageFor(model => model.Durum)
        </div>
        <p>
            <input type="submit" value="Kaydet" class="button"  />
        </p>
}


    <div style="clear:both;"> </div>
	</div> <!-- End #tab1 -->
	</div> <!-- End .content-box-content -->
 </div>
