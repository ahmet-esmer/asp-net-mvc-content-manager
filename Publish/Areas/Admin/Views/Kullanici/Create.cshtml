@model ModelLayer.Kullanici

<script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



<div class="content-box"><!-- Start Content Box -->
     <div class="content-box-header">
					<h3 style="cursor: s-resize;">Kullanıcılar</h3>
	 <div class="clear"></div>
	 </div> <!-- End .content-box-header -->
	 <div style="display: block;" class="content-box-content">
	 <div style="display: block;" class="tab-content default-tab" id="tab1">

      <div class="linkZemin" >
          @Ajax.ActionLink("Kullanıcılar", "Index", "Kullanici", 
                            new AjaxOptions { 
                                UpdateTargetId = "icerik",
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "GET",
                                LoadingElementId = "progress"
                            },
                            new {@class= "button"}
                            )
       </div>

     @using (Ajax.BeginForm("KullaniciKaydet", "Kullanici", new AjaxOptions
     { 
              HttpMethod = "GET",
              InsertionMode = InsertionMode.Replace,
              UpdateTargetId = "icerik"
             }))
     {
     @Html.ValidationSummary(true)
        <div class="editor-label">
            @Html.LabelFor(model => model.AdiSoyadi)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.AdiSoyadi, new { @class = "text", @style = "width:300px;" })
            @Html.ValidationMessageFor(model => model.AdiSoyadi)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EPosta)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.EPosta, new { @class= "text", @style= "width:300px;" })
            @Html.ValidationMessageFor(model => model.EPosta)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Sifre)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Sifre, new { @class = "text", @style = "width:300px;" })
            @Html.ValidationMessageFor(model => model.Sifre)
        </div>

       <p>
           <input type="submit" value="Kullanıcı Oluştur" class="button" />
       </p>
}


    <div style="clear:both;"> </div>
	</div> <!-- End #tab1 -->
	</div> <!-- End .content-box-content -->
 </div>