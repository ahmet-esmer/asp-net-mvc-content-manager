@model ModelLayer.Duyuru

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<script src="@Url.Content("~/Areas/Admin/Content/fckeditor/fckeditor.js")" type="text/javascript" ></script>

<script type="text/javascript">
    $(document).ready(function () {
        var oFCKeditor = new FCKeditor('Icerik');
        oFCKeditor.BasePath = '@Url.Content("~/Areas/Admin/Content/fckeditor/")';
        oFCKeditor.Width = "100%";
        oFCKeditor.Height = "500px";
        //oFCKeditor.ToolbarSet = "kisaTool";
        oFCKeditor.ReplaceTextarea();
    });
</script>


<div class="content-box"><!-- Start Content Box -->
     <div class="content-box-header">
					<h3 style="cursor: s-resize;">Duyuru Kaydet</h3>
	 <div class="clear"></div>
	 </div> <!-- End .content-box-header -->
	 <div style="display: block;" class="content-box-content">
	 <div style="display: block;" class="tab-content default-tab" id="tab1">

      <div class="linkZemin" >
          <a href='@Url.Action("Duyurular","Duyuru")' class="button" >Duyurular</a>
      </div>

     @using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

        <div class="editor-label">
            @Html.LabelFor(model => model.Baslik)
        </div>
         
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Baslik, new { @class = "text", @style = "width:500px;" })
            @Html.ValidationMessageFor(model => model.Baslik)
        </div>

        <div class="editor-label">
        @Html.LabelFor(model => model.Dil)
        </div>
        <div class="editor-field">
        @Html.DropDownListFor(model => model.Dil,
                            new SelectList(ViewBag.SiteDil, "Kodu", "Adi"),
                            new { @class = "text", @style = "width:200px;"})
        @Html.ValidationMessageFor(model => model.Dil)

 
           
        </div>
         
        <div class="editor-field">
        <br />
            @Html.TextAreaFor(model => model.Icerik, new { @class = "Icerik", @name = "Icerik" })
            @*@Html.ValidationMessageFor(model => model.Icerik )*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Durum)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Durum)
            @Html.ValidationMessageFor(model => model.Durum)
        </div>

        <p>
           <input type="submit" value=" Kaydet " class="button" />
        </p>
}
        <div style="clear:both;"> </div>
		</div> <!-- End #tab1 -->
		</div> <!-- End .content-box-content -->
	  </div>
