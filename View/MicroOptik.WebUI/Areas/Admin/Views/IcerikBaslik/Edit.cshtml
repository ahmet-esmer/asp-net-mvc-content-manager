@model ModelLayer.IcerikBaslik

@{
    ViewBag.Title = "Kategori Kaydet";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

     <div class="content-box"><!-- Start Content Box -->
     <div class="content-box-header">
					<h3 style="cursor: s-resize;">İçerik Başlık Düzenleme</h3>
	 <div class="clear"></div>
	 </div> <!-- End .content-box-header -->
	 <div style="display: block;" class="content-box-content">
	 <div style="display: block;" class="tab-content default-tab" id="tab1">

     <div class="linkZemin" >
         <a href="@Url.Action("Index", "IcerikBaslik", new { dil="tr" })" class="button" >İçerik Başlıkları</a>
     </div>

     
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

       
        <p> 
            @{
             Dictionary<string, object> bolge = new Dictionary<string, object>();
             bolge.Add("Ana Menu", "Ana Menu");
             bolge.Add("Alt Menu", "Alt Menu");
            }

            @Html.LabelFor(x => x.GosterimAlani)
            @Html.DropDownListFor(x => x.GosterimAlani,
                   new SelectList(bolge, "Value", "Value"),
                            new { @class = "text", @style = "width:200px;" })

        </p>
    
    
    <p> 
            @{
               Dictionary<string, object> urun = new Dictionary<string, object>();
               urun.Add("Sayfa","false");
               urun.Add("Ürün","true" );
            }

            <label>Gösterim Şekli</label>
            @Html.DropDownListFor(x => x.Urun ,
       new SelectList(urun, "Value", "Key"),
                            new { @class = "text", @style = "width:200px;" })

        </p>
    
        <p> 
            <label>Üst Kategori</label>
         @{  
       Model.Serial = Model.Serial.Substring(0, Model.Serial.Length - 3);
         }

         @Html.DropDownList("Serial",
                  new SelectList(ViewBag.Kategori, "Serial", "KategoriAdi", Model.Serial),
                  new { @class = "text", @style = "width:200px;" })
        </p>
        <p> 
            @Html.LabelFor(model => model.KategoriAdi)
            @Html.TextBoxFor(model => model.KategoriAdi, new { @class = "text", @style = "width:300px;" })
            @Html.ValidationMessageFor(model => model.KategoriAdi)
        </p>
    
       
        <p> 
            @Html.LabelFor(model => model.Durum)
            @Html.EditorFor(model => model.Durum)
            @Html.ValidationMessageFor(model => model.Durum)
        </p>
        <p>
            <input type="submit" value="Kaydet" class="button" />
        </p>
}


    <div style="clear:both;"> </div>
	</div> <!-- End #tab1 -->
	</div> <!-- End .content-box-content -->
</div>
     

