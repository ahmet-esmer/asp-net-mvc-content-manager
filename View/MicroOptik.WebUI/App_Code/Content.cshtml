
@using System.Web.Mvc;


@helper Script(string scriptName, UrlHelper url)
{
<script src="@url.Content("~/Scripts/"+ scriptName )" type="text/javascript"></script>
}

@helper StyleAdmin(string styleName, UrlHelper url)
{
<link href="@url.Content("~/Areas/Admin/Content/Style/" + styleName )"  rel="stylesheet" type="text/css" />
}

@helper Style(string styleName, UrlHelper url)
{
<link href="@url.Content("~/Content/Style/" + styleName )"  rel="stylesheet" type="text/css" />
}

@helper DilIcon(UrlHelper url ,string dilKodu)
{
    dilKodu += ".png";
<img src="@url.Content("~/Content/Products/Sayfa/"+ dilKodu )" alt="@dilKodu" />
}



